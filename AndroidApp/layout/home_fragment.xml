<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.BarChart android:layout_width="0dp"
                                                  android:layout_height="0dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:id="@+id/data_chart"
                                                  android:layout_marginBottom="8dp"
                                                  app:layout_constraintBottom_toTopOf="@+id/Limit"></com.github.mikephil.charting.charts.BarChart>
    <Button
            android:text="Sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sync" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button"
            android:textStyle="bold" android:textSize="24sp" android:background="@drawable/round_buttons"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="5 For Today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Limit" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FF0000" android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/button_sync"/>
</androidx.constraintlayout.widget.ConstraintLayout>
