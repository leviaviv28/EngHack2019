<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:text="User Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UserInfoTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.462"/>
    <TextView
            android:text="Limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LimitTitle" app:layout_constraintStart_toStartOf="@+id/UserInfoTitle"
            app:layout_constraintEnd_toEndOf="@+id/UserInfoTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginTop="8dp"
    />
    <TextView
            android:text="Reset Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ResetDataTitle" app:layout_constraintStart_toStartOf="@+id/UserInfoTitle"
            app:layout_constraintEnd_toEndOf="@+id/UserInfoTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/divider3" android:layout_marginTop="8dp"
    />
    <TextView
            android:text="Credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreditsTitle" app:layout_constraintStart_toStartOf="@+id/UserInfoTitle"
            app:layout_constraintEnd_toEndOf="@+id/UserInfoTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/divider4"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Weight:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WeightTitle" app:layout_constraintStart_toStartOf="@+id/HeightTitle"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/HeightTitle" android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/HeightTitle"/>
    <TextView
            android:text="Been Smoking For:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BeenSmokingForTitle" app:layout_constraintStart_toStartOf="@+id/HeightTitle"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/WeightTitle" android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/HeightTitle" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Smokes Per Day:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HowOftenPerDayTitle" app:layout_constraintStart_toStartOf="@+id/HeightTitle"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/BeenSmokingForTitle" android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/HeightTitle" app:layout_constraintHorizontal_bias="0.021"/>
    <TextView
            android:text="Height:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeightTitle" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/UserInfoTitle" android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="70kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Weight" app:layout_constraintStart_toEndOf="@+id/WeightTitle"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/WeightTitle"
            app:layout_constraintBottom_toBottomOf="@+id/WeightTitle" android:textColor="#000000"
            android:textSize="18sp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="4 Per Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SmokesPerDay" app:layout_constraintStart_toEndOf="@+id/HowOftenPerDayTitle"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/HowOftenPerDayTitle"
            app:layout_constraintBottom_toBottomOf="@+id/HowOftenPerDayTitle" android:textColor="#000000"
            android:textSize="18sp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="3 Years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BeenSmokingFor" app:layout_constraintStart_toEndOf="@+id/BeenSmokingForTitle"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/BeenSmokingForTitle"
            app:layout_constraintBottom_toBottomOf="@+id/BeenSmokingForTitle" android:textColor="#000000"
            android:textSize="18sp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="5&quot; 6'"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Height" app:layout_constraintStart_toEndOf="@+id/HeightTitle"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/HeightTitle"
            app:layout_constraintBottom_toBottomOf="@+id/HeightTitle" android:textColor="#000000"
            android:textSize="18sp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#525252"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SmokesPerDay" android:layout_marginTop="4dp"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#525252"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecommendedTitle" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="#525252"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ResetData" android:layout_marginTop="4dp"/>
    <TextView
            android:text="Per Day:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PerDayTitle" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/LimitTitle"
            android:layout_marginTop="8dp" android:textSize="18sp" android:textColor="#000000"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/LimitPerDay"
            app:layout_constraintStart_toEndOf="@+id/PerDayTitle" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/PerDayTitle"
            app:layout_constraintBottom_toBottomOf="@+id/PerDayTitle"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ResetData"
            android:background="@drawable/round_buttons" android:textColor="#FFFFFF" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ResetDataTitle"
            app:layout_constraintEnd_toEndOf="@+id/ResetDataTitle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ResetDataTitle"/>
    <TextView
            android:text="FirstName LastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Person1Credit" app:layout_constraintStart_toStartOf="@+id/CreditsTitle"
            app:layout_constraintEnd_toEndOf="@+id/CreditsTitle"
            app:layout_constraintTop_toBottomOf="@+id/CreditsTitle" android:layout_marginTop="24dp"
            android:textColor="#000000" android:textStyle="bold"/>
    <TextView
            android:text="FirstName LastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person2Credit" app:layout_constraintStart_toStartOf="@+id/CreditsTitle"
            app:layout_constraintEnd_toEndOf="@+id/CreditsTitle"
            app:layout_constraintTop_toBottomOf="@+id/Person1Credit" android:layout_marginTop="16dp"
            android:textColor="#000000" android:textStyle="bold"/>
    <TextView
            android:text="FirstName LastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Person3Credit" app:layout_constraintStart_toStartOf="@+id/CreditsTitle"
            app:layout_constraintEnd_toEndOf="@+id/CreditsTitle"
            app:layout_constraintTop_toBottomOf="@+id/person2Credit" android:layout_marginTop="16dp"
            android:textColor="#000000" android:textStyle="bold"/>
    <TextView
            android:text="Recommended: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RecommendedTitle"
            app:layout_constraintTop_toBottomOf="@+id/PerDayTitle" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/PerDayTitle"
            android:textSize="16sp" android:textColor="#F44336" android:textStyle="bold"/>
    <TextView
            android:text="3 per day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Recommended" app:layout_constraintStart_toEndOf="@+id/RecommendedTitle"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/RecommendedTitle"
            app:layout_constraintBottom_toBottomOf="@+id/RecommendedTitle" android:textColor="#F44336"
            android:textSize="16sp"/>
    <TextView
            android:text="Recalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Recalculate" app:layout_constraintStart_toEndOf="@+id/LimitPerDay"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textColor="@color/colorAccent"
            android:textStyle="bold" android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/Recommended"
            app:layout_constraintBottom_toBottomOf="@+id/Recommended"/>
</androidx.constraintlayout.widget.ConstraintLayout>