<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <Button
            android:text="@string/submit"
            android:layout_width="103dp"
            android:layout_height="29dp"
            android:id="@+id/submitData"
            android:background="@drawable/round_buttons" android:textColor="#FFFFFF" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="7dp"
            app:layout_constraintTop_toTopOf="@+id/LimitPerDay"
            app:layout_constraintBottom_toBottomOf="@+id/LimitPerDay"/>
    <Button
            android:text="@string/recalculate"
            android:layout_width="104dp"
            android:layout_height="31dp"
            android:id="@+id/recalculate"
            android:background="@drawable/round_buttons" android:textColor="#FFFFFF" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/submitData"
            app:layout_constraintBottom_toBottomOf="@+id/Recommended" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/submitData"/>
    <TextView
            android:text="@string/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UserInfoTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/LimitTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/SmokesPerDay"
            app:layout_constraintStart_toStartOf="@+id/UserInfoTitle"
            app:layout_constraintEnd_toEndOf="@+id/UserInfoTitle"/>
    <TextView
            android:text="@string/reset_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ResetDataTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintStart_toStartOf="@+id/LimitTitle" app:layout_constraintEnd_toEndOf="@+id/LimitTitle"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreditsTitle"
            android:textColor="#000000" android:textStyle="bold" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/ResetDataTitle"
            app:layout_constraintEnd_toEndOf="@+id/ResetDataTitle" app:layout_constraintTop_toBottomOf="@+id/divider3"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="@string/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WeightTitle"
            android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/HeightTitle"
            app:layout_constraintTop_toBottomOf="@+id/HeightTitle"/>
    <TextView
            android:text="@string/been_smoking_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BeenSmokingForTitle"
            android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/WeightTitle"
            app:layout_constraintTop_toBottomOf="@+id/WeightTitle"/>
    <TextView
            android:text="@string/smokes_per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HowOftenPerDayTitle"
            android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/BeenSmokingForTitle"
            app:layout_constraintTop_toBottomOf="@+id/BeenSmokingForTitle"/>
    <TextView
            android:text="@string/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/HeightTitle"
            android:textColor="#000000"
            android:textAllCaps="false" android:textStyle="bold" android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/UserInfoTitle"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="70kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Weight"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/WeightTitle"
            app:layout_constraintStart_toEndOf="@+id/WeightTitle" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/WeightTitle"/>
    <TextView
            android:text="4 Per Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SmokesPerDay"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/HowOftenPerDayTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/HowOftenPerDayTitle"
            app:layout_constraintBottom_toBottomOf="@+id/HowOftenPerDayTitle"/>
    <TextView
            android:text="3 Years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BeenSmokingFor"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/BeenSmokingForTitle"
            app:layout_constraintTop_toTopOf="@+id/BeenSmokingForTitle"
            app:layout_constraintStart_toEndOf="@+id/BeenSmokingForTitle" android:layout_marginStart="8dp"/>
    <TextView
            android:text="5&quot; 6'"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Height"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/HeightTitle"
            app:layout_constraintBottom_toBottomOf="@+id/HeightTitle"
            app:layout_constraintStart_toEndOf="@+id/HeightTitle" android:layout_marginStart="8dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="411dp"
            android:layout_height="0.5dp"
            android:background="#525252"
            app:layout_constraintTop_toBottomOf="@+id/recalculate" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="411dp"
            android:layout_height="0.5dp"
            android:background="#525252"
            app:layout_constraintTop_toBottomOf="@+id/ResetData" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="411dp"
            android:layout_height="0.5dp"
            android:background="#525252"
            app:layout_constraintTop_toBottomOf="@+id/SmokesPerDay"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PerDayTitle"
            android:textSize="18sp" android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toBottomOf="@+id/LimitTitle"/>
    <EditText
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/LimitPerDay"
            app:layout_constraintStart_toEndOf="@+id/PerDayTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/PerDayTitle"
            app:layout_constraintBottom_toBottomOf="@+id/PerDayTitle" android:autofillHints=""/>
    <Button
            android:text="@string/reset"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/ResetData"
            android:background="@drawable/round_buttons" android:textColor="#FFFFFF" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ResetDataTitle"
            app:layout_constraintEnd_toEndOf="@+id/ResetDataTitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ResetDataTitle"/>
    <TextView
            android:text="@string/levi"
            android:layout_width="77dp"
            android:layout_height="15dp"
            android:id="@+id/Person1Credit"
            android:textColor="#000000" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/CreditsTitle"
            app:layout_constraintEnd_toEndOf="@+id/CreditsTitle"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/CreditsTitle"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/jenil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person2Credit"
            android:textColor="#000000" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/Person1Credit"
            app:layout_constraintEnd_toEndOf="@+id/Person1Credit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Person1Credit"/>
    <TextView
            android:text="@string/jarrod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Person3Credit"
            android:textColor="#000000" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/person2Credit"
            app:layout_constraintEnd_toEndOf="@+id/person2Credit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/person2Credit"/>
    <TextView
            android:text="@string/recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RecommendedTitle"
            android:textSize="16sp" android:textColor="#F44336" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/PerDayTitle" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/PerDayTitle"/>
    <TextView
            android:text="3 per day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Recommended"
            android:textColor="#F44336"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/RecommendedTitle"
            app:layout_constraintTop_toTopOf="@+id/RecommendedTitle"
            app:layout_constraintBottom_toBottomOf="@+id/RecommendedTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>